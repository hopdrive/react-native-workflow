{
  "name": "react-native-workflow",
  "version": "0.1.0",
  "description": "A Temporal-lite workflow engine for React Native - persistent, offline-first workflow orchestration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./adapters/expo": {
      "import": "./dist/adapters/expo/index.js",
      "types": "./dist/adapters/expo/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "prepare": "husky"
  },
  "keywords": [
    "react-native",
    "workflow",
    "temporal",
    "offline-first",
    "queue",
    "background-tasks"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/react": "^14.3.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/uuid": "^9.0.8",
    "@vitest/coverage-v8": "^4.0.16",
    "better-sqlite3": "^9.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jsdom": "^27.4.0",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  },
  "peerDependencies": {
    "expo-sqlite": ">=13.0.0",
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "expo-sqlite": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
