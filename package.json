  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  },
  "peerDependencies": {
    "expo-sqlite": ">=13.0.0"
  },
  "peerDependenciesMeta": {
    "expo-sqlite": {
      "optional": true
