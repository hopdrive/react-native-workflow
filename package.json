{
  "name": "react-native-workflow",
  "version": "0.1.0",
  "description": "A Temporal-lite workflow engine for React Native - persistent, offline-first workflow orchestration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./adapters/expo": {
      "import": "./dist/adapters/expo/index.js",
      "types": "./dist/adapters/expo/index.d.ts"
    }
  },
  "scripts": {
